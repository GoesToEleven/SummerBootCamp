{{define "new-movie"}}
{{template "header"}}
<h2>New Movie</h2>
{{if .CreatedID}}
<strong>Created {{.CreatedID}}</strong>
{{end}}
<form action="/new-movie" method="POST" enctype="multipart/form-data">
  <label>Title:<br>
    <input type="text" name="title" placeholder="Title">
  </label><br>
  <label>Summary:<br>
    <textarea name="summary"
              placeholder="Summary"></textarea>
  </label><br>
  <label>Poster:<br>
    <input type="file"
           name="poster"
           placeholder="Poster">
  </label><br>
  <input type="submit">
</form>
{{template "footer"}}
{{end}}
